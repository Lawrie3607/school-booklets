{
  "name": "school-booklets",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "build:web": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "electron:start": "electron ."
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "marked": "12.0.0",
    "pdfjs-dist": "4.0.379",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"  },
  "build": {
    "appId": "com.schoolbooklets.app",
    "productName": "School Booklets",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/app-icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/app-icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/app-icon.png"
    }
  }
}
